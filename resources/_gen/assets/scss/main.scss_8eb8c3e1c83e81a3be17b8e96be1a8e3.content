.bio-brutalist{background:#fffde7;min-height:100vh;display:flex;align-items:center;justify-content:center;overflow-y:hidden}.bio-content-brutalist{display:flex;flex-direction:column;align-items:center;gap:2rem}.bio-profile-img{width:160px;height:160px;border-radius:50%;border:6px solid #000;object-fit:cover;background:#fff9c4}.bio-title-brutalist{font-size:3rem;color:#000;font-weight:900;margin:0;text-align:center;letter-spacing:2px;padding:1rem 1.5rem}.bio-links-brutalist{display:flex;flex-direction:column;gap:1rem;align-items:center}.links-grid-brutalist{display:grid;grid-template-columns:repeat(auto-fit,minmax(500px,1fr));gap:1rem;width:100%;justify-items:center}.brutalist-link{background:#000;color:#fffde4;padding:1rem 3rem;font-size:3rem;font-weight:700;border:3px solid #000;border-radius:0rem;text-decoration:none;text-transform:uppercase;box-shadow:0 0 #000;transition:box-shadow .1s,transform .1s;display:inline-block;width:100%;max-width:600px;min-width:180px;box-sizing:border-box;text-align:center}.brutalist-link:hover{color:#000;background:#fff8e1}.social-links-brutalist ul{list-style:none;padding:0;margin:0;display:flex;flex-direction:column;gap:1rem;align-items:center}.social-links-brutalist li{margin:0}body{min-height:100vh;width:100vw;margin:0;padding:0;box-sizing:border-box;font-family:system-ui,Arial,sans-serif;background:#fffde7;color:#000;overflow-x:hidden}@media(max-width:600px){body{font-size:1rem}.bio-title-brutalist{font-size:2rem}.bio-profile-img{width:100px;height:100px}.brutalist-link{padding:.75rem 1rem;font-size:2rem;min-width:0;max-width:100%}.links-grid-brutalist{grid-template-columns:1fr}}